                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Ejercicio realidado: 2 hr"
                    android:textSize="12sp"
                    android:layout_marginRight="15sp"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="25dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11/06/2024"
                    android:layout_marginLeft="155dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_options"
                    android:layout_marginLeft="100dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado de sueño: Excelente"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/strong_red"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-20dp"
                    android:background="@drawable/ic_bad"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horas de sueño: 2"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Cal. Consumidas: 5590"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginRight="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso: 72Kg"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    />
